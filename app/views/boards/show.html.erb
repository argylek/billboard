<h1><%= @board.name %></h1>
  <h3><%= link_to "View all Billboards", boards_path %></h3>
  <h3><%= link_to "Edit Billboard", edit_board_path(@board) %></h3>

<% @board.songs.each do |song| %>
  <h2><%= song.name %></h2>
  <h3><%= link_to song.artist.name, artist_songs_path(song.artist.id) %></h3>
<% end %>
<%= link_to 'Edit', edit_board_path(@board) %>
<%= link_to 'Back', board_path %>
<%= link_to 'Delete', board_path(@board), method: :delete %>

<hr/>
